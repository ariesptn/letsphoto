.thumbnail {
    position: relative;
    width: 500px;
    height: 300px;
    overflow: hidden;
    display:inline-flex;
    padding: 0%;
    margin: auto
  }
  .thumbnail img {
    position: absolute;
    left: 50%;
    top: 50%;
    height: 100%;
    width: auto;
    -webkit-transform: translate(-50%,-50%);
        -ms-transform: translate(-50%,-50%);
            transform: translate(-50%,-50%);
  }
  .thumbnail img.portrait {
    width: 100%;
    height: auto;
  }
  .thumbnail span{
      z-index: 50;
      font-size: 2em;
      text-align: center;
      background-color: rgba(240, 240, 240, 0.5);
      width: 100%;
      height: 2em;
      margin-top: 157px;
      
  }
  
  #foto{
      text-align: center;
      margin: auto;
  }
  #columnComment{
      background-color: white;
      width: 500px;
      text-align: left;
  }
  

