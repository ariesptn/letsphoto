        <center>
    <div class="thumbnail">
    <img src="/file/<%=imageData.filename%>"><br>
    </div>

    <br>
    
    <div id="columnComment">
    description :
    <%=imageData.description%><br>
    <br>
    <a href="/image/<%=imageData.filename%>/edit">edit</a>
    <br>
    created at :
    <%= imageComment.Comment.createdAt.toISOString().split("T").join(' ').split('.')[0] %>
    <br>
    uploaded by :
    <a href="/user/<%=imageData.User.username%>">
        <%=imageData.User.username%>
    </a><br>
    views :
    <%= imageData.views %>
    
    <form action='/comment/<%=imageData.filename%>' method="POST">
        <input type="text" name="comment">
        <input type="submit" value="Post">
    </form>
    Comment:<br>
    <div>
        <% imageCommentData.forEach(imageComment=>{ %>
        <div>
            <a href="/user/<%=imageComment.User.username %>">
                <%=imageComment.User.username %></a> :
            <%=imageComment.Comment.comment %>
            <br>
            <%= imageComment.Comment.createdAt.toISOString().split("T").join(' ').split('.')[0] %>
            <br>
            <iframe src="/reply/<%=imageComment.id%>" frameborder="0"></iframe>
            <% }) %>
        </div>
    </div>
</center>
