<%- include('./partials/header')%>
<img src="/uploads/<%=imageData.filename%>"><br>
description :
<%=imageData.description%><br>
uploaded by :
<a href="/user/<%=imageData.User.username%>">
    <%=imageData.User.username%>
</a>

<form action='/comment/<%=imageData.filename%>' method="POST">
    <input type="text" name="comment">
    <input type="submit" value="Post">
</form>
Comment:<br>
<div>
    <% imageCommentData.forEach(imageComment=>{ %>
    <div>
        username :
        <a href="/user/<%=imageComment.User.username %>">
            <%=imageComment.User.username %></a>
    </div>
    <div>
        comment :
        <%=imageComment.Comment.comment %>
    </div>
    <div>
        <form action="/comment/<%=imageData.filename%>/<%=imageComment.id%>/" method="POST">
            <input type="text" name="comment">
            <input type="submit" value="Reply">
        </form>
    </div><br>
    <% }) %>
</div>
